<ul class="list-unstyled">
  <% @items.each do |item| %>
    <li>
      <div class="card-item">
        <div class="card-details">
          <h4><%= item.name %></h4>
          <p><i class="fas fa-qrcode mr-2" id="qr-icon"></i>QR code number <strong class="highlighted highlighted-red"><%= item.qr_number %></strong></p>
          <p><i class="fas fa-info-circle mr-2"></i><%= item.description %></p>
        </div>
        <div class="card-menu">
          <div class="dropdown" >
            <h5 id="dropdownMenuButton_<%= item.id %>" class='d-flex justify-content-end' data-toggle="dropdown">
              <i class="fas fa-cog dropdown-toggle mr-2" ></i>
            </h5>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonp_<%= item.id %>">
              <%= link_to "Edit", edit_item_path(item), class: "dropdown-item" %>
              <%= link_to "Delete", disabled_item_path(item), class: "dropdown-item", method: :patch, data: { confirm: "Are you sure you want to delete this item?" } %>
            </div>
          </div>
          <div class="d-flex" id="marker-finding">
            <% item.findings.each do |finding| %>
              <% if finding.state == "pending" %>
                <%= link_to finding_path(finding), class: 'btn btn-outline-primary' do %>
                  <span>Item found</span>
                    <i class="fas fa-map-marker-alt"></i>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>


