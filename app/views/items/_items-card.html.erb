<ul class="list-unstyled">
  <% @items.each do |item| %>
    <li>
      <div class="card-item">
        <div class="card-details">
          <h4><%= item.name %></h4>
          <p><%= item.description %></p>
          <p>QR Code: <%= %></p>
        </div>
        <div class="card-menu dropdown">
          <div class="dropdown">
            <i class="fas fa-bars dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "Edit", edit_item_path(item), class: "dropdown-item" %>
              <%= link_to "Delete", item_path(item), class: "dropdown-item", method: :delete, data: { confirm: "Are you sure you want to delete this item?" } %>
            </div>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>


