<div class="form-container">
   <div class="devices-image" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.2),rgba(0,0,0,0.3)), url(<%= asset_url 'camera-contemporary-device-325153.jpg' %>);">
    <h3>Edit Item</h3>
  </div>
  <div class="form-body">
    <%= simple_form_for (item) do |f| %>
      <%= f.input :name, label: 'Item Name', error: 'Item name is mandatory, please specify one' %>
      <%= f.input :description, label: 'Item Description' %>
      <%= f.button :submit, class: "form-btn" %>
    <% end %>
  </div>
</div>
