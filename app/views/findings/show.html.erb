<% if @finding.state == 'pending' %>
  <h2><%= @item.name %> has been found</h2>
  <p>Now, it's your time to give back to the community!</p>
  <p>Your finder has chosen <%= @finding.cause.name %></p>
  <p>Please donate to view your item's location</p>
  <%= simple_form_for(@finding) do |f| %>
    <%= f.input :amount_cents_cents, as: :range, min: 0, max: 20, label: 'Your Donation:' %>
    <%= f.button :submit, class: "btn btn-form" %>
  <% end %>
<% else %>
  <h1>Your <%= @item.name %> was marked found!</h1>
  <p>Donation Summary</p>
  <ul>
    <li>Status: <%= @finding.state %></li>
    <li>Cause: <%= @finding.cause.name %></li>
    <li>Amount: <%= humanized_money_with_symbol(@finding.amount_cents_cents / 100) %></li>
  <ul>

  <h1>Item Details</h1>
  <ul>
    <li>Location: <%= @finding.address %></li>
    <li>Details: <%= @finding.message unless @finding.message.nil? %></li>
    <li>Dropped off at: <%= @finding.created_at.strftime("%A, %d %b %Y %l:%M %p") %></li>
  </ul>

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

<% end %>

